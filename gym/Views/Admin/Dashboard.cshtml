@using gym.ViewModels
@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Tổng quan hệ thống";
}

<h2 class="mb-3">📊 Bảng điều khiển quản trị viên</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card bg-primary text-white p-3 rounded-3 shadow">
            <h5>Tổng hội viên</h5>
            <h3>@Model.TotalMembers</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white p-3 rounded-3 shadow">
            <h5>Gói tập đang hoạt động</h5>
            <h3>@Model.TotalActivePackages</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-dark p-3 rounded-3 shadow">
            <h5>Tổng doanh thu</h5>
            <h3>@Model.TotalRevenue.ToString("N0") VNĐ</h3>
        </div>
    </div>
</div>

<hr />

<h4 class="mt-4">📦 Thống kê theo gói</h4>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Gói tập</th>
            <th>Hội viên đang dùng</th>
            <th>Tổng doanh thu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stat in Model.PackageStats)
        {
            <tr>
                <td>@stat.PackageName</td>
                <td>@stat.MemberCount</td>
                <td>@stat.TotalRevenue.ToString("N0") VNĐ</td>
            </tr>
        }
    </tbody>
</table>
