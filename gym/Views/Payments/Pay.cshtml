@model gym.ViewModels.PaymentViewModel

<h2>Thanh toán gói tập</h2>

<form asp-action="Pay" method="post">
    <input type="hidden" asp-for="MemberId" />
    <input type="hidden" asp-for="PackageId" />

    <div class="mb-3">
        <label>Hội viên:</label>
        <span>@Model.MemberName</span>
    </div>
    <div class="mb-3">
        <label>Gói tập:</label>
        <span>@Model.PackageName</span>
    </div>
    <div class="mb-3">
        <label>Giá tiền:</label>
        <span>@Model.Amount.ToString("N0") VNĐ</span>
    </div>
    <div class="mb-3">
        <label>Phương thức thanh toán</label>
        <select asp-for="Method" class="form-control">
            <option value="Tiền mặt">Tiền mặt</option>
            <option value="Chuyển khoản">Chuyển khoản</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Xác nhận thanh toán</button>
</form>
