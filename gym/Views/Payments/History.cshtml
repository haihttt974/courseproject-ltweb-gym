@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Lịch sử thanh toán";
}

<h2>Lịch sử thanh toán</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ngày thanh toán</th>
            <th>Số tiền</th>
            <th>Nhân viên thu</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PaymentDate?.ToString("dd/MM/yyyy")</td>
                <td>@item.Amount.ToString("N0") VNĐ</td>
                <td>@item.StaffName</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="DownloadInvoice" asp-route-id="@item.PaymentId">
                        Tải hóa đơn PDF
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
