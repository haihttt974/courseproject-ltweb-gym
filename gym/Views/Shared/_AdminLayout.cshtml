@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Gym Management Admin</title>

    <!-- AdminLTE + FontAwesome + Google Fonts -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700&display=swap" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Source Sans Pro', sans-serif;
        }

        .brand-link {
            font-weight: 700;
            background-color: #0d6efd;
            color: white !important;
        }

        .dark-mode {
            background-color: #121212 !important;
            color: #e0e0e0;
        }

            .dark-mode .main-sidebar,
            .dark-mode .main-header,
            .dark-mode .content-wrapper {
                background-color: #1e1e1e !important;
            }

            .dark-mode .nav-sidebar .nav-link {
                color: #aaa;
            }

                .dark-mode .nav-sidebar .nav-link.active,
                .dark-mode .nav-sidebar .nav-link:hover {
                    background-color: #007bff;
                    color: #fff;
                }

            .dark-mode .main-footer {
                background-color: #1e1e1e;
                color: #ccc;
            }

        .sidebar {
            background-color: #1f2d3d;
        }

        .nav-sidebar .nav-link {
            color: #cfd8dc;
        }

            .nav-sidebar .nav-link.active, .nav-sidebar .nav-link:hover {
                background-color: #007bff;
                color: #fff;
            }

        .content-wrapper {
            /* background-color: #f8f9fa;
            padding: 1rem; */
            padding-top: 70px;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark bg-dark fixed-top shadow-sm">
            <div class="container-fluid">
                <!-- Left: Sidebar toggle -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                </ul>

                <!-- Right: User menu + optional dark mode toggle -->
                <ul class="navbar-nav ml-auto align-items-center">
                    <!-- Optional: Dark Mode toggle -->
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="darkModeToggle" title="Chế độ tối/sáng">
                            <i id="darkModeIcon" class="fas fa-moon"></i>
                        </a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-toggle="dropdown">
                                <i class="fas fa-user-circle mr-1"></i>
                                <span>@User.Identity.Name</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow">
                                <a class="dropdown-item" asp-controller="Account" asp-action="EditProfile">
                                    <i class="fas fa-user-edit mr-2"></i> Trang cá nhân
                                </a>
                                <div class="dropdown-divider"></div>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="mb-0">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt mr-2"></i> Đăng xuất
                                    </button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar elevation-4 sidebar-dark-primary">
            <a href="@Url.Action("Index", "Home")" class="brand-link text-center">
                <i class="fas fa-dumbbell mr-2"></i><span class="brand-text">Gym Admin</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">

                        <li class="nav-item">
                            <a asp-controller="Admin" asp-action="Dashboard" class="nav-link @(currentController == "Home" ? "active" : "")">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        @{
                            var isUsersController = currentController == "Users";
                        }

                        <li class="nav-item has-treeview @(isUsersController ? "menu-open" : "")">
                            <a href="#" class="nav-link @(isUsersController ? "active" : "")">
                                <i class="nav-icon fas fa-users-cog text-primary"></i>
                                <p>
                                    Người dùng
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Users" asp-action="Index" class="nav-link @(currentAction == "Index" && isUsersController ? "active" : "")">
                                        <i class="far fa-list-alt nav-icon text-info"></i>
                                        <p>Danh sách</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Users" asp-action="Create" class="nav-link @(currentAction == "Create" && isUsersController ? "active" : "")">
                                        <i class="far fa-plus-square nav-icon text-success"></i>
                                        <p>Thêm mới</p>
                                    </a>
                                </li>
                                @* <li class="nav-item">
                                    <a asp-controller="Users" asp-action="Roles" class="nav-link @(currentAction == "Roles" && isUsersController ? "active" : "")">
                                        <i class="far fa-id-badge nav-icon text-warning"></i>
                                        <p>Phân quyền</p>
                                    </a>
                                </li> *@
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="EditProfile" class="nav-link @(currentController == "Account" ? "active" : "")">
                                <i class="nav-icon fas fa-user-edit"></i>
                                <p>Trang cá nhân</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Trainers" asp-action="Admin" class="nav-link @(currentController == "Account" ? "active" : "")">
                                <i class="nav-icon fas fa-user-edit"></i>
                                <p>Huấn luyện viên</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Packages" asp-action="Admin" class="nav-link @(currentController == "Packages" ? "active" : "")">
                                <i class="nav-icon fas fa-box-open"></i>
                                <p>Gói tập</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Staffs" asp-action="Index" class="nav-link @(currentController == "Staffs" ? "active" : "")">
                                <i class="nav-icon fas fa-user-tie"></i>
                                <p>Nhân viên</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0.0
            </div>
            <strong>&copy; 2025 Gym Management.</strong> All rights reserved.
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    <script>
        const toggleBtn = document.getElementById('darkModeToggle');
        const icon = document.getElementById('darkModeIcon');

        const setIcon = (dark) => {
            icon.classList.remove('fa-sun', 'fa-moon');
            icon.classList.add(dark ? 'fa-sun' : 'fa-moon');
        };

        // Khởi động
        document.addEventListener('DOMContentLoaded', () => {
            const isDark = localStorage.getItem('dark-mode') === 'true';
            document.body.classList.toggle('dark-mode', isDark);
            setIcon(isDark);
        });

        // Toggle khi click
        toggleBtn?.addEventListener('click', (e) => {
            e.preventDefault();
            const isDark = document.body.classList.toggle('dark-mode');
            localStorage.setItem('dark-mode', isDark);
            setIcon(isDark);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_Toast")
</body>
</html>
