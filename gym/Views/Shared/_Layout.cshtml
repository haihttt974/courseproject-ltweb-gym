<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Gym Management</title>

    <!-- GIỮ Bootstrap và FontAwesome bạn đã dùng -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dumbbell me-2"></i>GymManager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <!-- Menu trái -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Members" asp-action="Index">Hội viên</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Packages" asp-action="Index">Gói tập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Trainers" asp-action="Index">Huấn luyện viên</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Staffs" asp-action="Index">Nhân viên</a>
                        </li>
                    </ul>

                    <!-- Menu phải: Đăng ký / Đăng nhập -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus me-1"></i>Đăng ký
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Nội dung chính -->
    <main role="main" class="flex-fill container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer bg-primary text-white mt-auto py-3">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div>
                <span>© 2025 Gym Management</span> |
                <a class="text-white text-decoration-none" asp-controller="Home" asp-action="Privacy">Chính sách</a> |
                <a class="text-white text-decoration-none" asp-controller="Home" asp-action="Contact">Liên hệ</a>
            </div>
            <div class="social-icons mt-2 mt-md-0">
                <a href="https://facebook.com" target="_blank" class="btn btn-outline-light btn-sm rounded-circle me-2" title="Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="https://twitter.com" target="_blank" class="btn btn-outline-light btn-sm rounded-circle me-2" title="Twitter">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="https://instagram.com" target="_blank" class="btn btn-outline-light btn-sm rounded-circle" title="Instagram">
                    <i class="fab fa-instagram"></i>
                </a>
            </div>
        </div>
    </footer>

    <!-- Bootstrap script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
