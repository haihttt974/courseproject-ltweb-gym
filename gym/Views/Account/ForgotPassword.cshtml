@model gym.Models.DTOs.ForgotPasswordDto
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container mt-5">
    <h2 class="text-center">Quên mật khẩu</h2>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    <form asp-action="ForgotPassword" method="post" class="w-50 mx-auto">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Gửi link đặt lại</button>
            <a asp-action="Login" class="btn btn-link">Quay lại đăng nhập</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}