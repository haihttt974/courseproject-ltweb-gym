@model gym.Models.DTOs.LoginDto
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <h2 class="text-center">Đăng nhập</h2>
    <form asp-action="Login" method="post" class="w-50 mx-auto">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="UserName" class="form-label">Tên đăng nhập</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Mật khẩu</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Đăng nhập</button>
            <a asp-action="ForgotPassword" class="btn btn-link">Quên mật khẩu?</a>
        </div>
        <div>
            <p>Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a></p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}