@model List<gym.ViewModels.UnpaidPackageViewModel>
@{
    ViewData["Title"] = "Gói tập chưa thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-primary mb-4">Danh sách Gói tập chưa thanh toán</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info text-center">
        Bạn không có gói tập nào cần thanh toán.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-secondary">
                <tr>
                    <th>Mã thanh toán</th>
                    <th>Số tiền (VNĐ)</th>
                    <th>Hạn thanh toán</th>
                    <th>Mô tả</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PaymentId</td>
                        <td>@item.Total.ToString("N0")</td>
                        <td>@item.DueDate?.ToString("dd/MM/yyyy")</td>
                        <td>@item.Description</td>
                        <td>
                            <form asp-controller="Payment" asp-action="Checkout" method="post">
                                <input type="hidden" name="paymentId" value="@item.PaymentId" />
                                <button type="submit" class="btn btn-success btn-sm">Thanh toán</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
