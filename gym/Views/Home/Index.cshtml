@{
    ViewData["Title"] = "Trang Chủ";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap Icons (cho nút chế độ tối và Back to Top) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <style>
        /* Định dạng chung cho body */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #e0f7fa, #80deea); /* Nền xanh biển nhạt */
            color: #333;
            transition: background-color 0.3s, color 0.3s;
        }

            /* Chế độ tối */
            body.dark-mode {
                background: linear-gradient(135deg, #1c2526, #2a3439);
                color: #d4d4d4;
            }

                body.dark-mode .bg-light {
                    background-color: #2a3439 !important;
                }

                body.dark-mode .text-charcoal {
                    color: #d4d4d4;
                }

                body.dark-mode .card {
                    background-color: #2a3439;
                    color: #d4d4d4;
                }

                body.dark-mode .carousel-overlay {
                    background: rgba(26, 43, 75, 0.7);
                }

                body.dark-mode .feature-card,
                body.dark-mode .feedback-card,
                body.dark-mode .notification-card,
                body.dark-mode .trainer-card,
                body.dark-mode .package-card {
                    background: linear-gradient(135deg, #2a3439, #3a4449);
                    color: #d4d4d4;
                }

        /* Thanh điều hướng (nếu thêm sau) */
        .bg-navy {
            background-color: #1a2b4b;
        }

        /* Màu chữ */
        .text-charcoal {
            color: #333333;
        }

        /* Định dạng carousel */
        .carousel {
            max-width: 100%;
            margin: 0 auto;
        }

        .carousel-item {
            min-height: 300px;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            padding: 1rem;
            transition: opacity 0.6s ease-in-out; /* Chuyển đổi mượt */
        }

            .carousel-item.active {
                opacity: 1;
                display: block;
            }

            .carousel-item:not(.active) {
                opacity: 0;
                display: none; /* Ẩn hoàn toàn slide không hoạt động */
            }

        /* Lớp phủ carousel */
        .carousel-overlay {
            background: rgba(26, 43, 75, 0.7);
            padding: 1rem;
            border-radius: 5px;
            color: white;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
            animation: fadeIn 0.5s ease-in;
        }

        /* Chỉ số carousel */
        .carousel-indicators button {
            background-color: #fff;
            opacity: 0.5;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            border: none;
        }

        .carousel-indicators .active {
            opacity: 1;
            background-color: #d4a017; /* Màu vàng cho chỉ số đang hoạt động */
        }

        /* Nút điều hướng carousel */
        .carousel-control-prev,
        .carousel-control-next {
            background: rgba(26, 43, 75, 0.5);
            width: 5%;
            opacity: 0.7;
            transition: opacity 0.2s;
        }

            .carousel-control-prev:hover,
            .carousel-control-next:hover {
                opacity: 1;
            }

        /* Nút tùy chỉnh */
        .btn-navy {
            background-color: #1a2b4b;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 3px;
            font-weight: 700;
            transition: background-color 0.2s;
        }

            .btn-navy:hover {
                background-color: #d4a017;
            }

        .btn-custom {
            background-color: #0288d1; /* Xanh biển cho nút */
            border: none;
            padding: 1rem 3rem;
            font-size: 1.5rem;
            color: #fff;
        }

            .btn-custom:hover {
                background-color: #0277bd;
            }

        .bg-gold {
            background-color: #d4a017;
        }

        /* Phần Hero */
        .hero-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 2rem;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: bold;
            color: #0288d1;
            margin-bottom: 1.5rem;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            color: #555;
            margin-bottom: 2rem;
        }

        /* Thẻ (cards) */
        .feature-card, .feedback-card, .notification-card, .trainer-card, .package-card {
            background: linear-gradient(135deg, #e1f5fe, #b3e5fc);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            height: auto;
            text-align: center;
        }

        .feature-icon, .feedback-icon, .notification-icon, .trainer-icon, .package-icon {
            font-size: 2.5rem;
            color: #0288d1;
            margin-bottom: 1rem;
        }

        .section-title {
            font-size: 2.5rem;
            color: #0288d1;
            text-align: center;
            margin-bottom: 2rem;
        }

        .trainer-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .package-card h4 {
            color: #0288d1;
        }

        /* Hiệu ứng động */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        /* Nút Back to Top */
        #backToTop {
            position: fixed;
            bottom: 20px;
            right: 20px;
            display: none;
            z-index: 1000;
            padding: 10px 15px;
            border-radius: 3px;
            background-color: #0288d1;
            color: white;
        }

        /* Điều chỉnh responsive */
        @@media (max-width: 768px) {
            .carousel-item

        {
            min-height: 600px; /* Đủ chỗ cho ba thẻ xếp dọc */
        }

        .carousel-overlay {
            padding: 0.5rem;
        }

        .trainer-img {
            height: 150px;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .btn-custom {
            padding: 0.8rem 2rem;
            font-size: 1.2rem;
        }

        .feature-card, .feedback-card, .notification-card, .trainer-card, .package-card {
            max-width: 100%;
        }

        }
    </style>
</head>
<body>
    <!-- Phần Hero (giữ nguyên) -->
    <section class="hero-section">
        <div class="container">
            <h1 class="hero-title">Chào Mừng Đến Với Hệ Thống Quản Lý Hội Viên Gym</h1>
            <p class="hero-subtitle">Tham gia ngay để trải nghiệm hành trình tập luyện chuyên nghiệp!</p>
            <a href="/Account/Register" class="btn btn-custom btn-lg text-white">Đăng Ký Ngay</a>
        </div>
    </section>

    <!-- Phần Tính năng (giữ nguyên) -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Tính Năng Nổi Bật</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">💪</div>
                        <h3>Lịch Tập Linh Hoạt</h3>
                        <p>Tùy chỉnh lịch tập theo thời gian và nhu cầu cá nhân.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">📊</div>
                        <h3>Quản Lý Tiến Độ</h3>
                        <p>Theo dõi và đánh giá hiệu quả tập luyện dễ dàng.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">🏋️</div>
                        <h3>Hỗ Trợ Liên Tục</h3>
                        <p>Hệ thống hỗ trợ bạn mọi lúc trong hành trình tập luyện.</p>
                    </div>
                </div>
            </div>
