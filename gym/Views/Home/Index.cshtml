            <a href="/Account/Register" class="btn btn-custom btn-lg text-white">Tham Gia Ngay</a>
        </div>
    </section>

    <!-- Nút Back to Top -->
    <button id="backToTop" class="btn btn-navy"><i class="bi bi-arrow-up"></i></button>

    <!-- Bootstrap 5 JS và Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- GSAP ScrollTrigger -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <script>
        // Đăng ký ScrollTrigger với GSAP
        gsap.registerPlugin(ScrollTrigger);

        // Hiệu ứng cho phần Hero
        gsap.from(".hero-title", { opacity: 0, y: 50, duration: 1, delay: 0.5 });
        gsap.from(".hero-subtitle", { opacity: 0, y: 50, duration: 1, delay: 0.7 });
        gsap.from(".btn-custom", { opacity: 0, scale: 0.5, duration: 0.8, delay: 1.5 });

        // Hiệu ứng cho thẻ Tính năng
        gsap.from(".feature-card", {
            opacity: 0,
            x: -100,
            duration: 1,
            stagger: 0.4,
            scrollTrigger: {
                trigger: ".feature-card",
                start: "top 80%",
            }
        });

        // Hiệu ứng cho carousel Phản hồi
        gsap.from("#feedbackCarousel .carousel-item", {
            opacity: 0,
            x: 100,
            duration: 1,
            scrollTrigger: {
                trigger: "#feedbackCarousel",
                start: "top 80%",
            }
        });

        // Hiệu ứng cho thẻ Thông báo
        gsap.from(".notification-card", {
            opacity: 0,
            x: -100,
            duration: 1,
            stagger: 0.4,
            scrollTrigger: {
                trigger: ".notification-card",
                start: "top 80%",
            }
        });

        // Hiệu ứng cho carousel Huấn luyện viên
        gsap.from("#trainerCarousel .carousel-item", {
            opacity: 0,
            x: 100,
            duration: 1,
            scrollTrigger: {
                trigger: "#trainerCarousel",
                start: "top 80%",
            }
        });

        // Hiệu ứng cho carousel Gói tập
        gsap.from("#packageCarousel .carousel-item", {
            opacity: 0,
            x: -100,
            duration: 1,
            scrollTrigger: {
                trigger: "#packageCarousel",
                start: "top 80%",
            }
        });

        // Chế độ tối
        const darkModeToggle = document.getElementById('darkModeToggle');
        if (localStorage.getItem('darkMode') === 'enabled') {
            document.body.classList.add('dark-mode');
            if (darkModeToggle) {
                darkModeToggle.innerHTML = '<i class="bi bi-sun"></i>';
            }
        }
        if (darkModeToggle) {
            darkModeToggle.addEventListener('click', function () {
                document.body.classList.toggle('dark-mode');
                const isDarkMode = document.body.classList.contains('dark-mode');
                darkModeToggle.innerHTML = isDarkMode ? '<i class="bi bi-sun"></i>' : '<i class="bi bi-moon"></i>';
                localStorage.setItem('darkMode', isDarkMode ? 'enabled' : 'disabled');
            });
        }

        // Nút Back to Top
        const backToTop = document.getElementById('backToTop');
        window.addEventListener('scroll', function () {
            backToTop.style.display = window.scrollY > 300 ? 'block' : 'none';
        });
        backToTop.addEventListener('click', function () {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
</body>
