@model gym.Data.Package

@{
    ViewData["Title"] = "Thêm gói tập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Thêm gói tập</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Tên gói</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label">Loại gói</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Giá (VNĐ)</label>
                <input name="Price" class="form-control" type="number" step="1000" min="1000" value="@Model?.Price" />
                <span class="text-danger">@ViewData["PriceError"]</span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Thời hạn (ngày)</label>
                <input name="DurationInDays" class="form-control" type="number" min="1" value="@Model?.DurationInDays" />
                <span class="text-danger">@ViewData["DurationError"]</span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Thêm mới</button>
            <a asp-action="Index" class="btn btn-secondary">Quay về danh sách</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
