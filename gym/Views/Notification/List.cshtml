@model List<gym.Data.UserNotification>
@{
    ViewData["Title"] = "Thông báo";
}

<h2 class="text-primary mb-4">🔔 Thông báo của bạn</h2>

<div class="list-group">
    @foreach (var item in Model)
    {
        var isUnread = item.Seen == false;
        <div class="notification-item list-group-item list-group-item-action mb-2 border rounded @(isUnread ? "bg-light border-primary" : "")"
             data-id="@item.NotificationId"
             style="cursor: pointer;">
            <div class="d-flex justify-content-between align-items-center">
                <div class="fw-bold @(isUnread ? "text-dark" : "text-muted")">@item.Notification.Title</div>
                <small class="text-muted">@item.TimeSend?.ToString("HH:mm dd/MM/yyyy")</small>
            </div>
            <div class="text-secondary small">@item.Notification.Content</div>
            @if (isUnread)
            {
                <span class="position-absolute top-0 start-0 translate-middle p-1 bg-success border border-white rounded-circle"></span>
            }
        </div>
    }
</div>

<!-- Offcanvas để hiển thị thông báo -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="notificationOffcanvas">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Chi tiết thông báo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body" id="notificationContent">
        <!-- AJAX sẽ đổ nội dung vào đây -->
    </div>
</div>


@section Scripts {
    <script>
        // Gọi chi tiết thông báo
        $(document).ready(function () {
            $(".notification-item").click(function () {
                var id = $(this).data("id");

                $.post(`/Notification/MarkAsSeen`, { id: id }, function (html) {
                    $("#notificationContent").html(html);

                    const canvas = new bootstrap.Offcanvas(document.getElementById('notificationOffcanvas'));
                    canvas.show();
                });
            });

            // Reload lại trang khi offcanvas đóng
            const offcanvasElement = document.getElementById('notificationOffcanvas');
            offcanvasElement.addEventListener('hidden.bs.offcanvas', function () {
                location.reload(); // 🔁 Reload lại trang khi đóng
            });
        });
    </script>
}
